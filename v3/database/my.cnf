[mysqld]
# 设置默认字符集
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# 启用二进制日志（用于备份和复制）
log_bin = /var/log/mysql/mysql-bin.log
server-id = 1

# 性能优化
innodb_buffer_pool_size = 256M
max_connections = 200
wait_timeout = 300

# 安全设置
skip-name-resolve
local_infile = 0

[client]
default-character-set = utf8mb4
